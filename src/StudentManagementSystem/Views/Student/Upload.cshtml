@{
    ViewBag.Title = "File Upload";
}

<form id="file-form" asp-controller="Student" asp-action="Upload" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label for="FileName">File name:</label>
        <input class="form-control" type="text" id="FileName" name="FileName" placeholder="File name" />
    </div>
    <div class="form-group">
        <label for="file">File:</label>
        <div class="input-group">
            <input id="file-path" class="form-control" type="text" readonly />
            <span class="input-group-btn">
                <span class="btn btn-primary btn-file">
                    Browse... <input id="file" name="file" type="file" />
                </span>
            </span>
        </div>
    </div>
    <button class="form-control btn btn-success" form="file-form" type="submit">Upload</button>
</form>

@section scripts {
    <script>
        $(document).on('change', '#file', function () {
            let $fileInput = $(this);
            $('#file-path').val($fileInput.val());
        })
    </script>
}